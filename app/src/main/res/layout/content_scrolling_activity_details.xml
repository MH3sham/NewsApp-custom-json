<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.com.example.vip.koranewsuserapp.ScrollingActivityDetails"
    tools:showIn="@layout/activity_scrolling_activity_details"
    android:background="#eaeaea">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:orientation="vertical"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="عنوان مقالي"
            android:id="@+id/title_Details"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:transitionName="mytitletrasition"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="2017-12-14 22:51:20"
                android:transitionName="mytimetrasition"
                android:id="@+id/time_Details"
                android:textSize="16dp"
                android:gravity="right"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="26dp"
                android:id="@+id/imageiconDate"
                android:src="@drawable/calend"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" تكتب هنا تفاصيل الاخبار والمقالات واي كلام مهم فيه تفاصيل المفروض يتكتب هناتكتب هنا تفاصيل الاخبار والمقالات واي كلام مهم فيه تفاصيل المفروض يتكتب هنا"
            android:id="@+id/content_Details"
            android:transitionName="mycontenttrasition"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="20dp" />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
