<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mycardview"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:layout_gravity="center"
    card_view:cardCornerRadius="1dp"
    android:layout_margin="5dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="290dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/imageView"
                android:transitionName="myImagetrasition"
                android:scaleType="fitXY"
                android:src="#f9a7a7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="My First Title"
                android:layout_alignBottom="@+id/imageView"
                android:id="@+id/titleTV"
                android:layout_gravity="bottom"
                android:textColor="@android:color/white"
                android:background="#55000000"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:transitionName="mytitletrasition"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="100"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/contentTV"
                android:transitionName="mycontenttrasition"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="90"
                android:textColor="#b7b7b7"
                android:textSize="15dp"
                android:ellipsize="end"
                android:maxLines="2"/> <!-- The maxLines will make sure that your text wont be shown in two lines and the ellipsize will add the three dots in the end. -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:gravity="bottom"
                android:layout_gravity="right"
                android:layout_marginRight="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="2017 Dec 12"
                    android:transitionName="mytimetrasition"
                    android:id="@+id/timeTV"
                    android:gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="26dp"
                    android:id="@+id/imageiconDate"
                    android:src="@drawable/calend" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>